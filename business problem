.abc{
    color: red;
}
.center{
    text-align: center;
}
/* box model
    1. border => thickness, style, color
    2. padding => space inside the border
    3. margin => space outside the border
 */
.box{
    border: 1px solid lightgray;
    width: 300px;
    padding: 10px;
    margin: 60px auto;
    border-radius: 14px;
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
}
.box-img{
    width: 100%;
    border-radius: 14px;
}


/* either in padding or in margin
the first value refers top and bottom and the second value
refers left and right! */



.login{
    font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
    width: 340px;
    margin: 120px auto;
    text-align: center;
}
.input{
    width: 100%;
    margin-bottom: 10px;
    padding: 12px;
    font-size: 16px;
    border: 1px solid gray;
    border-radius: 0;
    box-sizing: border-box;
}
.btn{
    background-color: black;
    color: white;
    border: 1px solid black;
    padding: 12px;
    width: 100%;
    border-radius: 0;
    box-sizing: border-box;
    font-size: 16px;
}

.logo{
    height: 48px;
}
/*  box-sizing: border-box ensures that the content does not go out of the 
parent element if going out because of padding  */
